<% include ../partials/header %>

    <div class="row">
        <div class="mx-auto">
            <h1>Edit Review</h1>
        </div>
    </div>

    <div class="row">
        <div class="mx-auto">
            <form class="border border-light rounded px-3 py-3" action="/campgrounds/<%= campground_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <fieldset class="starability-basic form-group" id="rating">
                        <div>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" <% if (review.rating === 5) { %> -star <% } %> />
                            <label for="first-rate5">
                                Amazing - <%- '<i class="fas fa-star checked-star"></i>'.repeat(5) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" <% if (review.rating === 4) { %> checked-star <% } %> />
                            <label for="first-rate4">
                                Very good - <%- '<i class="fas fa-star checked-star"></i>'.repeat(4) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" <% if (review.rating === 3) { %> checked-star <% } %> />
                            <label for="first-rate3">
                                Average - <%- '<i class="fas fa-star checked-star"></i>'.repeat(3) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" <% if (review.rating === 2) { %> checked-star <% } %> />
                            <label for="first-rate2">
                                Not good - <%- '<i class="fas fa-star checked-star"></i>'.repeat(2) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" <% if (review.rating === 1) { %> checked-star <% } %> />
                            <label for="first-rate1">
                                Terrible - <%- '<i class="fas fa-star checked-star"></i>'.repeat(1) %>
                            </label>
                        </div>
                    </fieldset>
                </div>

                <div class="form-group">
                    <textarea class="form-control" type="text" name="review[text]" placeholder="Write a review for this campground..." rows="5" cols="50" maxlength="500" required><%- review.text %></textarea>
                </div>

                <div class="form-group mb-0">
                    <button class="btn btn-primary">Submit a Review</button>
                </div>
            </form>
            <a class="btn mt-3" href="/campgrounds/<%= campground_id %>"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
        </div>
    </div>


<% include ../partials/footer %>
