<% include ../partials/header %>

    <div class="row">
        <div class="mx-auto">
            <h1>New Review: <%= campground.name %></h1>
        </div>
    </div>

    <div class="row">
        <div class="mx-auto">
            <form class="border border-light rounded px-3 py-3" action="/campgrounds/<%= campground._id %>/reviews" method="POST">
                <div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <fieldset class="starability-basic form-group" id="rating">
                        <div>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
                            <label for="first-rate5">
                                Amazing - <%-'<i class="fas fa-star checked-star"></i>'.repeat(5) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4">
                                Very good - <%-'<i class="fas fa-star checked-star"></i>'.repeat(4) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3">
                                Average - <%- '<i class="fas fa-star checked-star"></i>'.repeat(3) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2">
                                Not good - <%- '<i class="fas fa-star checked-star"></i>'.repeat(2) %>
                            </label>
                        </div>

                        <div>
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1">
                                Terrible - <%- '<i class="fas fa-star checked-star"></i>'.repeat(1) %>
                            </label>
                        </div>
                    </fieldset>
                </div>

                <div class="form-group">
                    <textarea class="form-control" type="text" name="review[text]" placeholder="Write a review for this campground..." rows="5" cols="50" maxlenght="500" required></textarea>
                </div>

                <div class="form-group mb-0">
                    <button class="btn btn-primary">Submit a Review</button>
                </div>
            </form>
            <a class="btn mt-3" href="/campgrounds/<%= campground._id %>"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
        </div>
    </div>


<% include ../partials/footer %>
