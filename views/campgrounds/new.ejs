<% include ../partials/header %>


<div class="row">

    <h1 style="text-align: center;">Create a New Campground</h1>

    <div style="width: 30%; margin: 25px auto;">

        <form action="/campgrounds" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="newCampgroundName">Campground Name</label>
                <input class="form-control" type="text" id="newCampgroundName" name="campground[name]" placeholder="Name" required>
            </div>

            <div class="form-group">
                <label for="newImage">Image</label>
                <input type="file" id="newImage" name="image" accept="image/*" required>
            </div>

            <div class="form-group">
                <label for="newDescription">Description</label>
                <input class="form-control" type="text" id="newDescription" name="campground[description]" placeholder="Description" required>
            </div>

            <div class="form-group">
                <label for="newPrice">Price</label>
                <input class="form-control" type="number" id="newPrice" name="campground[price]" placeholder="Price" min="0.01" step="0.01" required>
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>

        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>