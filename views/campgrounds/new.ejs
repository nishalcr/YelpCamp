<% include ../partials/header %>

<div class="row">
    <div class="mx-auto">
        <h1>Create a New Campground</h1>
    </div>
</div>

<div class="row">
    <div class="mx-auto">
        <form action="/campgrounds" method="POST" enctype="multipart/form-data" class="border border-light rounded px-3 py-3">
            
            <div class="form-group mx-5">
                <label for="newCampgroundName">Name :</label>
                <input class="form-control mb-2" type="text" id="newCampgroundName" name="campground[name]" placeholder="Campground name" required>
            </div>
            
            <div class="form-group mx-5">
                <label for="newImage">Image :</label>
                <input type="file" class="form-control-file mb-2 imageUpload" id="newImage" name="image" accept="image/*" required>
            </div>
            
            <div class="form-group mx-5">
                <label for="newDescription">Description :</label>
                <textarea class="form-control mb-2" type="text" id="newDescription" name="campground[description]" placeholder="Write a description about campground." row="3" cols="60" required></textarea>
            </div>

            <div class="form-group mx-5">
                <label for="newPrice">Price : <i class="fas fa-rupee-sign"></i></label>
                <input class="form-control mb-2" type="number" id="newPrice" name="campground[price]" placeholder="Price" min="0.01" step="0.01" required>
            </div>

            <div class="text-center">
                <button class="btn btn-lg btn-primary">Submit</button>
            </div>
                        
        </form>

        <div class="mt-2 pl-4 ml-5">
            <a class="justify-content-around" href="/campgrounds"><i class="fas fa-arrow-circle-left"></i> Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>