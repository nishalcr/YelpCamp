<% include ../partials/header %>

    <div class="jumbotron jumbotron-fluid text-center py-4 my-5">
      <div class="container">
        <h1 class="display-4">Welcome to YelpCamp !</h1>
        <br>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <a class = "btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
      </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <% if(noMatch !== null) { %>
                <div class="card text-center justify center">
                    <div class="card-body">
                        <h3 class="mb-0"><%= noMatch %></h3>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <div class="card-columns">
        <% campgrounds.forEach( function(campground){ %>
            <div class="card text-center my-3">
                    <img class="card-img-top" src="<%= campground.image %>">
                    <div class="card-body">
                        <p class="card-text">
                            <h4><%= campground.name%></h4>
                            <% if (campground.rating === 0) { %>
                                <em>No reviews yet.</em>
                            <% } else { %>
                                <span class="fas fa-star checked"></span>
                                <span class="fas fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
                                <span class="fas fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
                                <span class="fas fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
                                <span class="fas fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-success">More Info</a>
                    </div>
                </div>
        <% }); %>
    </div>

    <br>
    <br>
    
    <% if (pages && pages > 0) { %>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-5">
                <% if (current == 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link">First</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="/campgrounds<%if(search){%>?search=<%=search%><%}%>">First</a>
                    </li>
                <% } %>
                <% if (current == 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link">&laquo;</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="/campgrounds?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">&laquo;</a>
                    </li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link">...</a>
                    </li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="page-item active">
                        <a class="page-link"><%= i %></a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="/campgrounds?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a>
                    </li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="page-item disabled"><a>
                        <a class="page-link">...</a>
                    </li>
                <% } %>
                <% } %>

                <% if (current == pages) { %>
                    <li class="page-item disabled">
                        <a class="page-link">&raquo;</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="/campgrounds?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">&raquo;</a>
                    </li>
                <% } %>

                <% if (current == pages) { %>
                    <li class="page-item disabled">
                        <a class="page-link">Last</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="/campgrounds?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a>
                    </li>
                <% } %>
            </ul>
        <% } %>
    </nav>

<% include ../partials/footer %>